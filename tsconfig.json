{
  "compilerOptions": {
    // Recommended settings for Node 14
    // https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "ES2020",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "cli/*",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
